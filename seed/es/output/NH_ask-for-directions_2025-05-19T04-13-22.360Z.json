  "lessons": [
    {
      "slug": "directions-basics",
      "title": "Basic Directional Vocabulary",
      "objective": "Learn essential vocabulary for understanding and asking for basic directions.",
      "cards": [
        {
          "front": "¿Dónde está...?",
          "back": "Where is...?",
          "ipa": "/ˈdon.de esˈta.../",
          "example_sentence": "¿Dónde está el banco?",
          "grammar_explanation": "Use 'estar' for location.  'Dónde' means 'where.'"
        },
        {
          "front": "a la derecha",
          "back": "to the right",
          "ipa": "/a la deˈɾe.t͡ʃa/",
          "example_sentence": "Está a la derecha de la tienda.",
          "grammar_explanation": "Use 'a la' + direction."
        },
        {
          "front": "a la izquierda",
          "back": "to the left",
          "ipa": "/a la isˈkjeɾ.da/",
          "example_sentence": "El museo está a la izquierda.",
          "grammar_explanation": "Use 'a la' + direction."
        },
        {
          "front": "derecho",
          "back": "straight",
          "ipa": "/deˈɾe.t͡ʃo/",
          "example_sentence": "Sigue derecho por dos cuadras.",
          "grammar_explanation": "Can also mean 'right' as in not left."
        },
        {
          "front": "aquí",
          "back": "here",
          "ipa": "/aˈki/",
          "example_sentence": "Estoy aquí.",
          "grammar_explanation": "Adverb of place."
        },
        {
          "front": "allí",
          "back": "there",
          "ipa": "/aˈʝi/",
          "example_sentence": "Está allí.",
          "grammar_explanation": "More distant than 'aquí'."
        },
        {
          "front": "cerca de",
          "back": "near to",
          "ipa": "/ˈθeɾ.ka de/",
          "example_sentence": "El café está cerca de aquí.",
          "grammar_explanation": "Use 'de' after 'cerca'."
        },
        {
          "front": "lejos de",
          "back": "far from",
          "ipa": "/ˈle.xos de/",
          "example_sentence": "La estación está lejos de mi casa.",
          "grammar_explanation": "Use 'de' after 'lejos'."
        },
        {
          "front": "¿Perdón?",
          "back": "Excuse me?",
          "ipa": "/peɾˈðon/",
          "example_sentence": "¿Perdón? No te entiendo.",
          "grammar_explanation": "Used to politely interrupt or ask for clarification."
        },
        {
          "front": "la dirección",
          "back": "the address/direction",
          "ipa": "/la di.ɾekˈθjon/",
          "example_sentence": "¿Cuál es la dirección?",
          "grammar_explanation": "Feminine noun. Important for asking where to go."
        }
      ]
    },
